@model Bookstore.Models.Address

@{
    // construiește returnUrl din Path + QueryString
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<h2>Your Address</h2>

@if (Model == null)
{
    <p>No address found.</p>
    <!-- trimite returnUrl -->
    <a asp-action="Create"
       asp-route-ReturnUrl="@returnUrl"
       class="btn btn-primary">
        Add Address
    </a>
}
else
{
    <p>@Model.Street, @Model.City, @Model.County, @Model.ZipCode</p>

    <a asp-action="Edit"
       asp-route-id="@Model.Id"
       asp-route-ReturnUrl="@returnUrl"
       class="btn btn-sm btn-outline-primary">
        Edit
    </a>

    <a asp-action="Delete"
       asp-route-id="@Model.Id"
       asp-route-ReturnUrl="@returnUrl"
       class="btn btn-sm btn-outline-danger">
        Delete
    </a>
}
