@Html.AntiForgeryToken()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookstore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book"></i> Bookstore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-layer-group"></i> Categories
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li class="dropdown-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="#" class="text-decoration-none">Fiction</a>
                                    </span>
                                    <span>
                                        <a href="#" class="text-decoration-none me-2"><i class="fa-solid fa-pen"></i></a>
                                        <a href="#" class="text-decoration-none"><i class="fa-solid fa-trash"></i></a>
                                    </span>
                                </li>
                                <li class="dropdown-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="#" class="text-decoration-none">Non-Fiction</a>
                                    </span>
                                    <span>
                                        <a href="#" class="text-decoration-none me-2"><i class="fa-solid fa-pen"></i></a>
                                        <a href="#" class="text-decoration-none"><i class="fa-solid fa-trash"></i></a>
                                    </span>
                                </li>
                                <li class="dropdown-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="#" class="text-decoration-none">Mystery</a>
                                    </span>
                                    <span>
                                        <a href="#" class="text-decoration-none me-2"><i class="fa-solid fa-pen"></i></a>
                                        <a href="#" class="text-decoration-none"><i class="fa-solid fa-trash"></i></a>
                                    </span>
                                </li>
                                <li class="dropdown-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="#" class="text-decoration-none">Science</a>
                                    </span>
                                    <span>
                                        <a href="#" class="text-decoration-none me-2"><i class="fa-solid fa-pen"></i></a>
                                        <a href="#" class="text-decoration-none"><i class="fa-solid fa-trash"></i></a>
                                    </span>
                                </li>
                                <li><a  href="#" class="dropdown-item">+ Add new category</a></li>
                            </ul>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="#"><i class="fa-solid fa-book-open"></i> Books</a>
                        </li>
                        @* <li class="nav-item me-2"> *@
                        @*     <a class="nav-link" href="#"><i class="fa-solid fa-people-group"></i> Authors</a> *@
                        @* </li> *@
                        <li class="nav-item me-2">
                            <a class="nav-link" asp-controller="Authors" asp-action="Index">
                                <i class="fa-solid fa-people-group"></i> Authors
                            </a>
                        </li>
                    </ul>

                    <form class="navbar-nav " role="search">
                        <input class="form-control me-2" type="search" placeholder="Search books..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
                    </form>

                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="#"><i class="fas fa-heart"></i> Wishlist</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i> Cart</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link text-light">Hello, @User.Identity.Name</a>
                            </li>
                            <li class="nav-item me-2">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light nav-link border-0 bg-transparent">
                                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="LogIn">
                                    <i class="fas fa-sign-in-alt"></i> Log In
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - Bookstore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

